{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "src/server/server.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    { "src": "/health", "dest": "src/server/server.js" },
    { "src": "/client", "dest": "src/server/server.js" },
    {
      "src": "/",
      "headers": {
        "cache-control": "s-maxage=0"
      },
      "dest": "/index.html"
    }
  ],
  "env": {
    "MONGODB_URI": "@piper-mongodb-uri"
  }
}
